{
	"name": "@xumi/chunk-upload",
	"version": "1.0.0",
	"description": "A simple and fast file chunk upload library using Web Workers",
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"sideEffects": false,
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"dev": "tsup --watch",
		"build": "tsup",
		"clean": "rm -rf dist",
		"type-check": "tsc --noEmit",
		"prepublishOnly": "npm run build && npm run type-check",
		"demo": "vite",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest --coverage",
		"format": "prettier --write \"src/**/*.{ts,tsx}\" \"demo/**/*.{ts,tsx,html}\" \"test/**/*.{ts,tsx}\"",
		"format:check": "prettier --check \"src/**/*.{ts,tsx}\" \"demo/**/*.{ts,tsx,html}\" \"test/**/*.{ts,tsx}\""
	},
	"keywords": [
		"file-upload",
		"fragment-upload",
		"chunk-upload",
		"web-worker",
		"typescript",
		"utilities",
		"tools",
		"frontend",
		"file-handling"
	],
	"author": "",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": ""
	},
	"bugs": {
		"url": ""
	},
	"homepage": "",
	"engines": {
		"node": ">=16.0.0"
	},
	"devDependencies": {
		"@commitlint/config-conventional": "^20.0.0",
		"@types/node": "^24.10.1",
		"@types/spark-md5": "^3.0.2",
		"@vitest/ui": "^1.0.0",
		"commitlint": "20.1.0",
		"prettier": "^3.0.0",
		"tsup": "^8.0.0",
		"typescript": "^5.0.0",
		"vite": "^4.0.0",
		"vitest": "^1.0.0"
	},
	"dependencies": {
		"spark-md5": "^3.0.2"
	}
}
